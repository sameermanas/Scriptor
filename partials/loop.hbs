{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
	<article class="{{post_class}}">
		<header class="post-header">
			{{#if featured}}
			<span class="featured-post">&darr; Featured</span>
			{{/if}}
			<h2 class="post-title"><a href="{{{url}}}" rel="bookmark">{{title}}</a></h2>
			<div class="post-meta">
				Posted by {{author}} {{tags prefix=" in "}}
			</div><!-- .post-meta -->
		</header><!-- .post-header -->
		<div class="post-content">
			{{#if custom_excerpt}}
			<p>{{custom_excerpt}}</p>
			{{else}}
			<p>{{excerpt words="60"}}&hellip;</p>
			{{/if}}
			<p class="read-more"><a class="read-more-link" href="{{url}}" title="{{title}}">Click to Continue <span class="screen-reader-text">{{title}} </span>&rarr;</a></p>
		</div><!-- .post-content -->
	</article>
{{/foreach}}
